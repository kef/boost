<?xml version="1.0" encoding="UTF-8"?>
<project name="boost" default="build" basedir=".">
	<property name="build" location="build"/>
	<property name="build.classes" location="${build}/classes"/>

	<!-- FIXME: SC502 Add ".dir" to all directory property names -->
	
	<target name="clean">
		<delete dir="${build}"/>
	</target>

	<target name="build">
		<mkdir dir="${build.classes}"/>
		<javac srcdir="src/edge/java" destdir="${build.classes}"/>
	</target>
</project>