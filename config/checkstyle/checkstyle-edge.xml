<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.2//EN" "http://www.puppycrawl.com/dtds/configuration_1_2.dtd"
        [ <!ENTITY common-rules SYSTEM "file:config/checkstyle/checkstyle-common.xml"> ]
        >
<module name="Checker">
    <module name="SuppressionFilter">
        <property name="file" value="config/checkstyle/suppressions-edge.xml"/>
    </module>
    <module name="TreeWalker">
        <property name="cacheFile" value="build/checkstyle/checkstyle-edge.cache"/>
        &common-rules;
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>
        <module name="JavaNCSS">
            <property name="classMaximum" value="80"/>
        </module>
        <module name="GenericIllegalRegexp">
            <property name="format" value="new RuntimeException|public class|static"/>
        </module>
    </module>
</module>
