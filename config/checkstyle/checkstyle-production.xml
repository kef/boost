<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.2//EN" "http://www.puppycrawl.com/dtds/configuration_1_2.dtd"
[ <!ENTITY common-rules SYSTEM "file:config/checkstyle/checkstyle-common.xml"> ]
>
<module name="Checker">
<!--
    <module name="SuppressionFilter">
        <property name="file" value="@checkstyle.suppressions.dir@/suppressions-production.xml"/>
    </module>
-->
    <module name="TreeWalker">
        <module name="JavaNCSS">
            <property name="methodMaximum" value="10"/>
        </module>
<!--
        <property name="cacheFile" value="checkstyle-production.cache"/>
-->
        &common-rules;
        <module name="EmptyBlock">
            <property name="option" value="text"/>
        </module>
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>
        <module name="JavaNCSS">
            <property name="classMaximum" value="80"/>
        </module>
        <module name="InterfaceIsType">
            <property name="allowMarkerInterfaces" value="true"/>
        </module>
        <module name="ClassDataAbstractionCoupling">
            <property name="max" value="5"/>
        </module>
    </module>
</module>
